{
  "compilerOptions": {
    "target": "ES2022",
    "lib": [
      "ES2022",
      "DOM",
      "DOM.Iterable"
    ],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "allowJs": true,
    "checkJs": false,
    "jsx": "preserve",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "@repo/db": [
        "./packages/db/src"
      ],
      "@repo/ui": [
        "./packages/ui/src"
      ],
      "@repo/types": [
        "./packages/types/src"
      ],
      "@repo/integrations": [
        "./packages/integrations/src"
      ]
    },
    "noEmit": true
  },
  "exclude": [
    "node_modules",
    "dist",
    ".next",
    ".turbo"
  ]
}